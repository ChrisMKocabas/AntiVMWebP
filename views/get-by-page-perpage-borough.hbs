<form
  style="align-self:center;flex-direction:column; display: flex;justify-content:center-evenly;"
  method="GET"
  action="/api/restaurants/all"
  enctype="x-www-form-urlencoded"
>
  {{! <input type="hidden" name="_method" value="PUT" /> }}
  <div
    style="margin:1rem ;display:flex; flex-direction:row; justify-content:space-around"
  >
    <div>
      <label for="page">Go to Page #</label>
      <input
        id="page"
        type="number"
        name="page"
        min="1"
        value="{{details.page}}"
        required
      /><br />
    </div>
    <div>
      <label for="perpage">Entries Per Page</label>
      <input
        id="perpage"
        type="number"
        name="perpage"
        min="1"
        value="{{details.perPage}}"
        required
      /><br />
    </div>
    <div>
      <label for="borough">Borough</label>
      <input
        id="borough"
        type="text"
        name="borough"
        value="{{details.borough}}"
      /><br />
    </div>
  </div>
  <input type="submit" value="Submit" />
</form>

<div
  style="width:auto;height:auto; ;align-self:center;text-align:left;padding:16px;display: flex;justify-content:center; align-items:flex-start"
>
  <table
    border="1"
    ,style="width:100%;height:100%;align-self:center;flex-direction:column; display: flex;justify-content:center-evenly;"
  >
    <th>ID</th>
    <th>Restaurant ID</th>
    <th>Name</th>
    <th>Cuisine</th>
    <th>Borough</th>
    <th>Address</th>
    <th>Grades</th>

    {{#each data}}
      <tr>
        <td>{{this._id}}</td>
        <td>{{this.restaurant_id}}</td>
        <td>{{this.name}}</td>
        <td>{{this.cuisine}}</td>
        <td>{{this.borough}}</td>
        <td>
          {{this.address.building}}
          {{#each this.address.coord}}{{/each}}
          {{this.address.street}}
          {{this.address.zipcode}}
        </td>
        <td>
          {{#each this.grades}}
            {{#this}}
              <table border="1">
                <tr>
                  <td>Date: {{date}}</td>
                  <td>Grade: {{grade}}</td>
                  <td>Score: {{score}}</td>
                </tr>
              </table>
            {{/this}}
          {{/each}}
        </td>
        {{!-- <td>{{this.publishedDate.$date}}</td> --}}
      </tr>

    {{/each}}
  </table>

</div>

